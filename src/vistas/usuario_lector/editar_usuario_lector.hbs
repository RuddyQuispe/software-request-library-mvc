<div class="card mx-auto col-lg-6 bg-dark mb-3 text-light">
    <div class="card-header">
        Editar Usuario Lector con CI: {{ci}}
    </div>
    <form action="/gestionar_usuario_lector/modificar/{{ci}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="card-body">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">CI</span>
                </div>
                <input type="number" id="ci" class="form-control" required minlength="6" placeholder="ci del usuario"
                    value="{{ci}}" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
                </div>
                <input type="text" id="nombre" class="form-control" required placeholder="Juan" value="{{nombre}}"
                    aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Apellidos</span>
                </div>
                <input type="text" id="apellidos" class="form-control" required placeholder="Chato Padilla"
                    value="{{apellidos}}" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
                </div>
                <input type="email" id="email" class="form-control" required aria-label="Sizing example input"
                    value="{{email}}" aria-describedby="inputGroup-sizing-default"
                    placeholder="ej. mi.cuenta@email.com">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Telefono</span>
                </div>
                <input type="number" id="telefono" class="form-control" required minlength="6" maxlength="8"
                    value="{{telefono}}" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"
                    placeholder="Ej. 75555555">
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-success">Guardar Cambios</button>
                </div>
                <div class="col-md-6">
                    <a href="/gestionar_usuario_lector" type="button" class="btn btn-outline-danger">Cancelar
                        Cambios</a>
                </div>
            </div>
        </div>
    </form>
</div>